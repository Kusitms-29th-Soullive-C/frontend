<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/bg_grey800_10dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/search_selected_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/search_view_selected_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/search_selected_imageView"
        android:layout_toRightOf="@id/search_selected_imageView"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/search_icon_subtract"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/search_view_selected_item"
        android:layout_toRightOf="@id/search_selected_imageView"
        android:src="@drawable/ic_subtract" />

    <TextView
        android:id="@+id/search_view_selected_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view_selected_item"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/search_selected_imageView"
        android:layout_toRightOf="@id/search_selected_imageView"
        android:padding="3dp"
        android:textColor="@color/purple_500"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/keywords_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view_selected_job"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/search_selected_imageView"
        android:layout_toRightOf="@id/search_selected_imageView"
        android:orientation="horizontal" />

</RelativeLayout>