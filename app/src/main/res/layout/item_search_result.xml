<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/grey_700">
    <TextView
        android:id="@+id/search_selected_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/grey_150"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/search_selected_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/purple_600"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

<!--    선택한 모델들에 대한 textView -->

    <ImageView
        android:id="@+id/search_selected_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/search_view_selected_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/search_selected_imageView"
        android:layout_toRightOf="@id/search_selected_imageView"/>

    <TextView
        android:id="@+id/search_view_selected_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/purple_500"
        android:padding="3dp"
        android:layout_below="@id/search_view_selected_item"
        android:layout_toEndOf="@id/search_selected_imageView"
        android:layout_toRightOf="@id/search_selected_imageView"/>

    <LinearLayout
        android:id="@+id/keywords_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/search_selected_imageView"
        android:layout_toRightOf="@id/search_selected_imageView"
        android:layout_below="@id/search_view_selected_job"
        >
    </LinearLayout>

</RelativeLayout>
